    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'bevy_northstar'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=bevy_northstar"
                ],
                "filter": {
                    "name": "bevy_northstar",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug demo example",
            "cargo": {
                "args": [
                    "build",
                    "--example",
                    "demo"
                ]
            },
            "args": [],
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}